{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "paths": {
      "@x-community/shared": ["../shared/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", ".mastra"]
}
